<style>
  .nav-link {
      position: relative; 
      overflow: hidden; 
  }
  
  .nav-link::after {
      content: ''; 
      position: absolute;
      left: 0; 
      bottom: 0; 
      width: 100%; 
      height: 2px; 
      background-color: black; 
      transform: translateX(-100%); 
      transition: transform 0.3s ease; 
  }
  
  .nav-item:first-child .nav-link::after {
      background-color: #0078d7; 
  }
  
  .nav-link:hover::after {
      transform: translateX(0); 
  }
  
  .hvr-grow {
      display: inline-block;
      vertical-align: middle;
      transform: perspective(1px) translateZ(0);
      transition-duration: 0.3s;
      transition-property: transform;
  }
  
  .hvr-grow:hover {
      transform: scale(1.1); 
  }
  
  [class^="hvr-"] {
      margin: .4em;
      padding: 1em;
      cursor: pointer;
      background: #e1e1e1;
      text-decoration: none;
      color: #666;
      font-family: 'Roboto', sans-serif; 
  }
  
  a {
      color: #2098D1; 
      text-decoration: none; 
  }
  
  .nav-link:hover {
      color: #2098D1; 
  }
  
  .nav-link:not(:first-child) {
      color: black; 
  }
  </style>
  
  <nav class="navbar navbar-light sticky-top p-2 navbar-expand-lg" style="background-color: white;">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/banner.png" alt="Scruter Logo" width="90" height="30" class="d-inline-block align-text-top">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul id="navbar-links" class="navbar-nav mx-auto mb-2 mb-lg-0">
              <li class="nav-item">
                  <a class="nav-link hvr-grow text-dark <%= activeLink === 'home' ? 'active' : '' %>" href="/"><i class="fa-solid fa-right-from-bracket me-2"></i>Home Page</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link hvr-grow text-dark <%= activeLink === 'house' ? 'active' : '' %>" href="/house"><i class="fa-solid fa-house me-2"></i>Housing</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link hvr-grow text-dark <%= activeLink === 'food' ? 'active' : '' %>" href="/food"><i class="fa-solid fa-utensils me-2"></i>Food</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link hvr-grow text-dark <%= activeLink === 'market' ? 'active' : '' %>" href="/market"><i class="fa-solid fa-cart-shopping me-2"></i>For Sale</a>
              </li>
          </ul>
          <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center mt-3 mt-lg-0">
              <% if (user) { %>
                  <span class="navbar-text mb-2 mb-lg-0 me-lg-3">Welcome, <%= user.username %>!</span>
                  <a class="btn btn-outline-danger mb-2 mb-lg-0 me-lg-2" href="/logout"><i class="fa-solid fa-user me-2"></i>Logout</a>
                  <div class="dropdown">
                      <button class="btn btn-success dropdown-toggle text-light" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                          <i class="fa-solid fa-marker me-2"></i>Create Post
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                          <li><a class="dropdown-item" href="/house/form">House Ad</a></li>
                          <li><a class="dropdown-item" href="/food/form">Food Ad</a></li>
                          <li><a class="dropdown-item" href="/market/form">For Sale Ad</a></li>
                      </ul>
                  </div>
              <% } else { %>
                  <a class="btn btn-outline-success" href="/auth?action=login"><i class="fa-solid fa-user me-2"></i>Login</a>
              <% } %>
          </div>
        </div>
    </div>
  </nav>  